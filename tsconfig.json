{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "exactOptionalPropertyTypes": true
  },
  "include": [
    "./eslint.config.mjs",
    "server/**/*.ts"
  ]
}
